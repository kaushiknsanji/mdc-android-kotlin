<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer for shadow over the top left cut -->
    <item
        android:width="42dp"
        android:height="42dp"
        android:left="-6dp"
        android:top="6dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="0%">
            <shape android:shape="rectangle">
                <gradient
                    android:angle="270"
                    android:centerColor="#00000000"
                    android:centerX="0.6"
                    android:endColor="#44000000"
                    android:startColor="#00000000" />
            </shape>
        </rotate>
    </item>

    <!-- Layer for surface with the top left cut -->
    <item
        android:width="42dp"
        android:height="42dp"
        android:left="-6dp"
        android:top="6dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="100%">
            <shape>
                <solid android:color="@color/productGridBackgroundColor" />
            </shape>
        </rotate>
    </item>

    <!-- Layer for shadow over the top edge filling the entire width of the screen,
    placed adjacent to the top corner of the top left cut -->
    <item
        android:width="1000dp"
        android:height="42dp"
        android:left="29.5dp"
        android:top="-27.5dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#00000000"
                android:centerX="0.6"
                android:endColor="#44000000"
                android:startColor="#00000000" />
        </shape>
    </item>

    <!-- Layer for surface filling the entire width and height of the screen,
    placed below the top corner of the top left cut -->
    <item
        android:width="1000dp"
        android:height="1000dp"
        android:left="29.5dp"
        android:top="3.5dp">
        <shape>
            <solid android:color="@color/productGridBackgroundColor" />
        </shape>
    </item>

    <!-- Layer for surface filling the entire width and height of the screen,
    placed below the bottom corner of the top left cut -->
    <item
        android:width="1029.5dp"
        android:height="1000dp"
        android:top="33dp">
        <shape>
            <solid android:color="@color/productGridBackgroundColor" />
        </shape>
    </item>

</layer-list>